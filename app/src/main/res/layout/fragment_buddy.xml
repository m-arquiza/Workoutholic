<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.buddy.BuddyFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="33dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:src="@drawable/shiba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/text_buddy" />

    <TextView
        android:id="@+id/text_buddy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:text="Shiba's ready to get the day going!"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_height="15dp"
        android:layout_width="140dp"

        android:layout_marginStart="27dp"
        android:layout_marginTop="25dp"
        android:translationZ="-2dp"

        android:background="#e8f1fc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/food_icon"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:id="@+id/hunger_bar"
        android:layout_height="15dp"
        android:layout_width="140dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="25dp"

        android:alpha="0.0"

        android:background="#c73649"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/hunger_bar2"
        android:layout_height="15dp"
        android:layout_width="105dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="25dp"

        android:alpha="0.0"

        android:background="#c73649"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/hunger_bar3"
        android:layout_height="15dp"
        android:layout_width="70dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="25dp"

        android:alpha="0.0"

        android:background="#c73649"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/hunger_bar4"
        android:layout_height="15dp"
        android:layout_width="35dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="25dp"

        android:alpha="0.0"

        android:background="#c73649"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />




    <View
        android:layout_height="15dp"
        android:layout_width="140dp"

        android:layout_marginStart="27dp"
        android:layout_marginTop="60dp"
        android:translationZ="-2dp"

        android:background="#e8f1fc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/water_icon"
        android:translationZ="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:id="@+id/thirst_bar"
        android:layout_height="15dp"
        android:layout_width="140dp"


        android:layout_marginStart="27dp"

        android:layout_marginTop="60dp"

        android:alpha="0.0"

        android:background="#3666c7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/thirst_bar2"
        android:layout_height="15dp"
        android:layout_width="105dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="60dp"

        android:alpha="0.0"

        android:background="#3666c7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/thirst_bar3"
        android:layout_height="15dp"
        android:layout_width="70dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="60dp"

        android:alpha="0.0"

        android:background="#3666c7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/thirst_bar4"
        android:layout_height="15dp"
        android:layout_width="35dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="60dp"

        android:alpha="0.0"

        android:background="#3666c7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:layout_height="15dp"
        android:layout_width="140dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="100dp"
        android:translationZ="-2dp"

        android:background="#e8f1fc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/happy_icon"
        android:translationZ="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:id="@+id/happiness_bar"
        android:layout_height="15dp"
        android:layout_width="140dp"

        android:layout_marginStart="27dp"

        android:layout_marginTop="100dp"

        android:background="#a536c7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/coin_text"
        android:layout_width="65dp"
        android:layout_height="50dp"

        android:layout_marginTop="52dp"
        android:layout_marginEnd="36dp"

        android:text="104 coins"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/coin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/coin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/coin_text" />

    <ImageButton
        android:id="@+id/dogfood_button"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="90dp"


        android:background="#d2f2fc"
        android:scaleType="fitCenter"
        android:src="@drawable/food_bowl"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dogwater_button"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dogfood"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:gravity="center"
        android:text="x0"
        android:textSize="10sp"

        app:layout_constraintEnd_toEndOf="@id/dogfood_button"
        app:layout_constraintStart_toStartOf="@id/dogfood_button"
        app:layout_constraintTop_toBottomOf="@id/dogfood_button" />

    <ImageButton
        android:id="@+id/dogwater_button"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="244dp"
        android:layout_marginBottom="90dp"

        android:background="#d2f2fc"
        android:scaleType="fitCenter"
        android:src="@drawable/water_bowl"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dogfood_button" />
    />


    <TextView
        android:id="@+id/dogwater"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:gravity="center"
        android:text="x0"
        android:textSize="10sp"

        app:layout_constraintEnd_toEndOf="@id/dogwater_button"
        app:layout_constraintStart_toStartOf="@id/dogwater_button"
        app:layout_constraintTop_toBottomOf="@id/dogwater_button" />

    <ImageButton
        android:id="@+id/dog_toy1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="136dp"

        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/none"
        android:enabled="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dog_toy3" />

    <ImageButton
        android:id="@+id/dog_toy2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="136dp"

        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/none"
        android:enabled="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dog_toy3"
        app:layout_constraintStart_toStartOf="@+id/dog_toy1" />

    <ImageButton
        android:id="@+id/dog_toy3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="136dp"
        android:enabled="false"

        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/none"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/toy"
        android:layout_width="89dp"
        android:layout_height="101dp"
        android:src="@drawable/toy_ball"

        android:alpha="0.0"

        android:layout_marginEnd="156dp"
        android:layout_marginTop="185dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <ImageView
        android:id="@+id/toy_box"
        android:layout_width="162dp"
        android:layout_height="82dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/toy_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    />

</androidx.constraintlayout.widget.ConstraintLayout>